/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in = sel, out = notSel);

    And(a = b, b = sel, out = result1);
    
    And(a = a, b = notSel, out = result2);
    Or(a = result1, b = result2, out = out);
}